@model List<Application.ViewModel.PokemonView.PokemonViewModel>
@{
    ViewData["Title"] = "Mantenimiento Pokemones";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Crear Pokemones</h1>
            <p class="lead text-muted">Una aplicacion hecha para crear pokemones.</p>
            <p>
                <a asp-controller="Pokemon" asp-action="Create" class="btn btn-primary">Create new Pokemon</a>
            </p>
        </div>
    </div>
</section>

    <div class="row">
        @if (Model.Count == 0 || Model == null)
        {
            <h2>No hay pokemon</h2>
        }
        else
        {
            @foreach (Application.ViewModel.PokemonView.PokemonViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top img-product-size" src="@item.ImgUrl" />
                        <div class="card-body">
                            <h4>@item.Nombre</h4>
                          

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.Id" asp class="btn btn-sm btn-warning">Update</a>
                                    <a asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }


    </div>
